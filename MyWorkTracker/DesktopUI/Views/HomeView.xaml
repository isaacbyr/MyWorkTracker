            </Button>
            <Button cal:Message.Attach= "Add_New" Grid.Column="12" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
                <TextBlock x:Name="Six" Text="4" FontSize="18" Margin="45.4,7.8,44.6,8.2"></TextBlock>
            </Button>
            <Button cal:Message.Attach= "Add_New" Grid.Column="14" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
                <TextBlock x:Name="Seven" Text="4" FontSize="18" Margin="45.4,7.8,44.6,8.2"></TextBlock>
            </Button>
            
            <!--`Week 2-->
            <Button cal:Message.Attach= "Add_New" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
                <TextBlock x:Name="Eight" Text="4" FontSize="18" Margin="45.4,7.8,44.6,8.2"></TextBlock>
            </Button>
            <Button cal:Message.Attach= "Add_New" Grid.Column="4" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
                <TextBlock x:Name="Nine" FontSize="18"  Text="4" Margin="45.4,7.8,44.6,8.2"></TextBlock>
            </Button>
            <Button cal:Message.Attach= "Add_New" Grid.Column="6" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
                <TextBlock x:Name="Ten" FontSize="18"  Text="4" Margin="45.4,7.8,44.6,8.2"></TextBlock>
            </Button>
            <Button cal:Message.Attach= "Add_New" Grid.Column="8" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
                <TextBlock x:Name="Eleven" FontSize="18"  Text="4" Margin="45.4,7.8,44.6,8.2"></TextBlock>
            </Button>
            <Button cal:Message.Attach= "Add_New" Grid.Column="10" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
