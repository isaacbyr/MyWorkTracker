            </Button>
            <Button cal:Message.Attach= "Add_New" Grid.Column="8" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
                <TextBlock x:Name="Eighteen" FontSize="18" Text="14" Margin="45.4,7.8,44.6,8.2"></TextBlock>
            </Button>
            <Button cal:Message.Attach= "Add_New" Grid.Column="10" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
                <TextBlock x:Name="Nineteen" FontSize="18" Text="14" Margin="45.4,7.8,44.6,8.2"></TextBlock>
            </Button>
            <Button cal:Message.Attach= "Add_New" Grid.Column="12" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
                <TextBlock x:Name="Twenty" FontSize="18" Text="14" Margin="45.4,7.8,44.6,8.2"></TextBlock>
            </Button>
            <Button cal:Message.Attach= "Add_New" Grid.Column="14" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
                <TextBlock x:Name="TwentyOne" FontSize="18" Text="14" Margin="45.4,7.8,44.6,8.2"></TextBlock>
            </Button>

            <!--`Week 4-->
            <Button cal:Message.Attach= "Add_New" Grid.Column="2" Grid.Row="8" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
                <TextBlock Style="{StaticResource CurrentDateTheme}" x:Name="TwentyTwo" FontSize="18" Text="14" Margin="45.4,7.8,44.6,8.2"></TextBlock>
            </Button>
            <Button cal:Message.Attach= "Add_New" Grid.Column="4" Grid.Row="8" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="SteelBlue" Background="Transparent" BorderThickness="0">
